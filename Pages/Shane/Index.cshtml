@page
@model JellyPages.Pages.Shane.IndexModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <style>
        body {
            background-image: url('images/shanebackground.png');
            background-repeat: no-repeat;
            background-size:cover;

        }

        h1 {
            text-align: center;
            text-shadow: 3px 3px 3px black;
            padding: 10px;
            color: pink;
        }
    </style>
</head>

<h1>Jelly Pages</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>
<form>
    <p>
        <input type="text" asp-for="SearchString" placeholder="Click to search" class="text-center rounded"/>
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table" style="background-color:beige">
    <thead style="background-color:green;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phonebook[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Phonebook) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" class="btn btn-primary btn-sm" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" class="btn btn-primary btn-sm" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" class="btn btn-primary btn-sm"  asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
